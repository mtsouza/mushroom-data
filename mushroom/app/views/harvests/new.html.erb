<h1>Add a New Harvest</h1>



<%= form_for @harvest do |f| %>
  <% if @harvest.errors.any? %>

    <h2> Errors: </h2>
    <ul>
      <% @harvest.errors.full_messages.each do |message| %>
      <li> <%= message %> </li>
    <% end %>
    </ul>
<% end %>


  <p>
    <%= f.label :harvest %> <br/>
    <%= f.date_field :harvest, :default => Date.today %>
  </p>

  <p>
    <%= f.label :date %> <br/>
    <%= f.date_field :date %>
  </p>

  <p>
    <%= f.label :bagid %> <br/>
    <%= f.text_area :bagid %>
  </p>

  <p>
    <%= f.label :weight %> <br/>
    <%= f.text_area :weight %>
  </p>

  <p>
    <%= f.label :comment %> <br/>
    <%= f.text_area :comment %>
  </p>

  
 
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>